                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="ðŸ”¥ Fire Dept"
                android:backgroundTint="#FFA000"
                android:textColor="#FFFFFF" />

        </LinearLayout>

        <!-- ðŸ”¥ FIRE RESPONSE CARD -->
        <androidx.cardview.widget.CardView
            android:id="@+id/fireCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#FFFFFF">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <TextView
                    android:id="@+id/fireTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”¥ Fire Response"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#212121"/>
                <TextView
                    android:id="@+id/fireContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:lineSpacingExtra="6dp"
                    android:text="â€¢ Call 101 for emergency services.\nâ€¢ Evacuate via nearest exit.\nâ€¢ Stay low if smoke is present.\nâ€¢ Use extinguisher only if safe.\nâ€¢ Wait for emergency services."/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- ðŸš‘ MEDICAL EMERGENCIES CARD -->
        <androidx.cardview.widget.CardView
            android:id="@+id/medicalCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#FFFFFF">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <TextView
                    android:id="@+id/medicalTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸš‘ Medical Emergencies"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#212121"/>
                <TextView
                    android:id="@+id/medicalContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:lineSpacingExtra="6dp"
                    android:text="â€¢ Assess breathing and responsiveness.\nâ€¢ Dial 112 for help.\nâ€¢ Provide basic first aid.\nâ€¢ Stay calm and reassure victim.\nâ€¢ Follow medical instructions."/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- ðŸ‘€ SUSPICIOUS ACTIVITY CARD -->
        <androidx.cardview.widget.CardView
            android:id="@+id/suspiciousActivityCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#FFFFFF">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <TextView
                    android:id="@+id/suspiciousActivityTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ‘€ Suspicious Activity"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#212121"/>
