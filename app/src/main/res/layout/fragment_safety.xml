                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:lineSpacingExtra="6dp"
                    android:text="â€¢ Stay alert and observe.\nâ€¢ Do not confront.\nâ€¢ Report to campus security or police.\nâ€¢ Record location and time.\nâ€¢ Remain safe."/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- ðŸš· STALKING CARD -->
        <androidx.cardview.widget.CardView
            android:id="@+id/stalkingCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#FFFFFF">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <TextView
                    android:id="@+id/stalkingTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸš· Stalking"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#212121"/>
                <TextView
                    android:id="@+id/stalkingContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:lineSpacingExtra="6dp"
                    android:text="â€¢ Document incidents.\nâ€¢ Avoid and block stalker.\nâ€¢ Report to authorities.\nâ€¢ Inform close contacts.\nâ€¢ Change routine if needed."/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- ðŸŒ™ TRAVELING LATE CARD -->
        <androidx.cardview.widget.CardView
            android:id="@+id/travelingLateCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#FFFFFF">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <TextView
                    android:id="@+id/travelingLateTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸŒ™ Traveling Late"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#212121"/>
                <TextView
                    android:id="@+id/travelingLateContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:lineSpacingExtra="6dp"
