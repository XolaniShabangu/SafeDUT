<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- App Header Image -->
        <ImageView
            android:id="@+id/appHeaderImage"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@drawable/ic_safedut_logo"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_marginBottom="8dp"/>

        <!-- Emergency Call Buttons Row -->
        <LinearLayout
            android:id="@+id/callButtonsRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/callAmbulanceButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="🚑 Ambulance"
                android:backgroundTint="#00796B"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/callPoliceButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="🚓 Police"
                android:backgroundTint="#D32F2F"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/callFireButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="🔥 Fire Dept"
                android:backgroundTint="#FFA000"
                android:textColor="#FFFFFF" />

        </LinearLayout>

        <!-- 🔥 FIRE RESPONSE CARD -->
        <androidx.cardview.widget.CardView
            android:id="@+id/fireCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#FFFFFF">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <TextView
                    android:id="@+id/fireTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🔥 Fire Response"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#212121"/>
                <TextView
                    android:id="@+id/fireContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:lineSpacingExtra="6dp"
                    android:text="• Call 101 for emergency services.\n• Evacuate via nearest exit.\n• Stay low if smoke is present.\n• Use extinguisher only if safe.\n• Wait for emergency services."/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 🚑 MEDICAL EMERGENCIES CARD -->
        <androidx.cardview.widget.CardView
            android:id="@+id/medicalCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#FFFFFF">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <TextView
                    android:id="@+id/medicalTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🚑 Medical Emergencies"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#212121"/>
                <TextView
                    android:id="@+id/medicalContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:lineSpacingExtra="6dp"
                    android:text="• Assess breathing and responsiveness.\n• Dial 112 for help.\n• Provide basic first aid.\n• Stay calm and reassure victim.\n• Follow medical instructions."/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 👀 SUSPICIOUS ACTIVITY CARD -->
        <androidx.cardview.widget.CardView
            android:id="@+id/suspiciousActivityCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#FFFFFF">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <TextView
                    android:id="@+id/suspiciousActivityTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="👀 Suspicious Activity"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#212121"/>
                <TextView
                    android:id="@+id/suspiciousActivityContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:lineSpacingExtra="6dp"
                    android:text="• Stay alert and observe.\n• Do not confront.\n• Report to campus security or police.\n• Record location and time.\n• Remain safe."/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 🚷 STALKING CARD -->
        <androidx.cardview.widget.CardView
            android:id="@+id/stalkingCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#FFFFFF">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <TextView
                    android:id="@+id/stalkingTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🚷 Stalking"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#212121"/>
                <TextView
                    android:id="@+id/stalkingContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:lineSpacingExtra="6dp"
                    android:text="• Document incidents.\n• Avoid and block stalker.\n• Report to authorities.\n• Inform close contacts.\n• Change routine if needed."/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 🌙 TRAVELING LATE CARD -->
        <androidx.cardview.widget.CardView
            android:id="@+id/travelingLateCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#FFFFFF">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <TextView
                    android:id="@+id/travelingLateTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🌙 Traveling Late"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#212121"/>
                <TextView
                    android:id="@+id/travelingLateContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:lineSpacingExtra="6dp"
                    android:text="• Plan your trip.\n• Stay in lit areas.\n• Use safe transport.\n• Charge your phone.\n• Trust your instincts."/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- ✨ KEY FEATURES AT A GLANCE -->
        <TextView
            android:id="@+id/keyFeaturesLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="✨ Key Features"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:id="@+id/keyFeaturesGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#E0F7FA"
                android:layout_marginEnd="8dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:gravity="center"
                    android:text="Live Alerts"
                    android:textSize="14sp"
                    android:textColor="#00796B" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFF3E0"
                android:layout_marginEnd="8dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:gravity="center"
                    android:text="Incident Report"
                    android:textSize="14sp"
                    android:textColor="#EF6C00" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"

                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#E8F5E9">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:gravity="center"
                    android:text="Live Chat"
                    android:textSize="14sp"
                    android:textColor="#388E3C" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- 🔒 Privacy & Data -->
        <androidx.cardview.widget.CardView
            android:id="@+id/privacyCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#FFFFFF">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🔒 Privacy and Data"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#212121" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:lineSpacingExtra="4dp"
                    android:text="We collect your campus and profile info to personalize alerts and chats. No data is shared externally. Logs are auto-deleted after 30 days." />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 📄 Terms of Use & Privacy Policy -->
        <Button
            android:id="@+id/termsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📄 Terms of Use and Privacy Policy"
            android:backgroundTint="#FFFFFF"
            android:textColor="#1976D2"
            android:layout_marginBottom="16dp" />

        <!-- ✉️ Contact & Support -->
        <androidx.cardview.widget.CardView
            android:id="@+id/contactCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#FFFFFF">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="✉️ Contact and Support"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#212121" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:text="Email: support@SafeDUT.ac.za\nPhone: 031-XXX-XXXX" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
