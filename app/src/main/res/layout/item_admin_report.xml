<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#F7F7F7">

        <!-- Left: Text Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type: Theft"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2025-05-10 14:30"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#555555"
                android:layout_marginTop="4dp" />


            <TextView
                android:id="@+id/textDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description: Something happened"
                android:layout_marginTop="4dp"
                android:textSize="15sp"
                android:textColor="#333333" />

            <TextView
                android:id="@+id/textLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location: N/A"
                android:textSize="14sp"
                android:textColor="#777777"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/textUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submitted By: John Doe"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginTop="4dp" />



            <TextView
                android:id="@+id/textSorted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⏳ Unsorted"
                android:textSize="14sp"
                android:textColor="#FF5722"
                android:layout_marginTop="4dp" />

            <Button
                android:id="@+id/btnMarkSorted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mark as Sorted"
                android:layout_marginTop="10dp"
                android:backgroundTint="#00796B"
                android:textColor="#FFFFFF"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Right: Image Preview -->
        <ImageView
            android:id="@+id/imageMedia"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="12dp"
            android:scaleType="centerCrop"
            android:background="#CCCCCC"
            android:visibility="gone" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
